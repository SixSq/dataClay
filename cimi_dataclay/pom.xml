<project xmlns="http://maven.apache.org/POM/4.0.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
                             http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>dataclay</groupId>
  <artifactId>cimi</artifactId>
  
  <packaging>jar</packaging>
  
  <version>0.0.1-SNAPSHOT</version>
  <name>cimi dataclay</name>
  <description>dataclay integration for cimi</description>
  <url>https://github.com/SixSq/dataClay</url>

  <properties>
    <nexus>https://nexus.sixsq.com/content/repositories</nexus>
    <platform.os>-rhel7</platform.os>

    <src.dir>src</src.dir>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>
  
  <repositories>

    <repository>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>slipstream.releases.enterprise</id>
      <name>SlipStream Releases</name>
      <url>${nexus}/releases-enterprise${platform.os}</url>
    </repository>

    <repository>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>slipstream.snapshots.enterprise</id>
      <name>SlipStream Snapshots</name>
      <url>${nexus}/snapshots-enterprise${platform.os}</url>
    </repository>

  </repositories>

  <distributionManagement>
    <repository>
      <id>sixsq.releases</id>
      <name>SixSq Releases</name>
      <url>${nexus}/releases-enterprise${platform.os}</url>
    </repository>
    
    <snapshotRepository>
      <id>sixsq.snapshots</id>
      <name>SixSq Snapshots</name>
      <url>${nexus}/snapshots-enterprise${platform.os}</url>
    </snapshotRepository>
  </distributionManagement>
  
  <dependencies>
    <dependency>
      <groupId>dataclay</groupId>
      <artifactId>dataclay</artifactId>
      <version>0.0.1</version>
    </dependency>
  </dependencies>

  <build>
    <sourceDirectory>${src.dir}</sourceDirectory>
    <finalName>cimi-dataclay</finalName>
    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.1.0</version>
      </plugin>

    </plugins>
  </build>

</project>
